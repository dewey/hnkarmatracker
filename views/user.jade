extends layout

block content
  a(href="/")
    h1= title

  a(href="/user/#{username}/refresh") Refresh

  h2 Karma last 30 days
  canvas#canvas-karma(width="1000px", height="400")

  h2 Comments last 30 days
  canvas#canvas-comment(width="1000px", height="400")

  h2 Submissions last 30 days
  canvas#canvas-submission(width="1000px", height="400")

  script(type='text/javascript').
    var lineChartDataKarma = {
            labels : [#{data.labelsKarma}],
            datasets : [
                {
                    fillColor : "rgba(220,220,220,0.5)",
                    strokeColor : "rgba(220,220,220,1)",
                    pointColor : "rgba(220,220,220,1)",
                    pointStrokeColor : "#fff",
                    data : [#{data.dataKarma}]
                },
                {
                    fillColor : "rgba(151,187,205,0.5)",
                    strokeColor : "rgba(151,187,205,1)",
                    pointColor : "rgba(151,187,205,1)",
                    pointStrokeColor : "#fff",
                    data : [#{data.dataComment}]
                }, 
                {
                    fillColor : "rgba(247, 70, 74, 1.0000)",
                    strokeColor : "rgba(220,220,220,1)",
                    pointColor : "rgba(220,220,220,1)",
                    pointStrokeColor : "#fff",
                    data : [#{data.dataSubmission}]
                }
            ] 
        }

    var myKarmaCommentSubmission = new Chart(document.getElementById("canvas-karma").getContext("2d")).Line(lineChartDataKarma);

    var lineChartDataComments = {
            labels : [#{data.labelsComment}],
            datasets : [
                {
                    fillColor : "rgba(220,220,220,0.5)",
                    strokeColor : "rgba(220,220,220,1)",
                    pointColor : "rgba(220,220,220,1)",
                    pointStrokeColor : "#fff",
                    data : [#{data.dataComment}]
                }
            ] 
        }

    var myComment = new Chart(document.getElementById("canvas-comment").getContext("2d")).Line(lineChartDataComments);

    var lineChartDataSubmission = {
            labels : [#{data.labelsSubmission}],
            datasets : [
                {
                    fillColor : "rgba(220,220,220,0.5)",
                    strokeColor : "rgba(220,220,220,1)",
                    pointColor : "rgba(220,220,220,1)",
                    pointStrokeColor : "#fff",
                    data : [#{data.dataSubmission}]
                }
            ] 
        }

    var mySubmission = new Chart(document.getElementById("canvas-submission").getContext("2d")).Line(lineChartDataSubmission);
    
  
